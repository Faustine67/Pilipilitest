{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}


    <h1>Page Produits </h1>

    <table class="table">
        <thead>
            <tr>
                <th scope="col"> #</th>
                <th scope="col"> Nom</th>
                <th scope="col">Description</th>
                <th scope="col">Marque</th>
                <th scope="col">Slug</th>
                <th scope="col">Date de création</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
        {% for prod in products %}
           <tr>
              <td scope="row">{{prod.id}}</td>
              <td scope="row">{{prod.name}}</td>
              <td scope="row">{{prod.description}}</td>
              <td scope="row">{{prod.brand.id|length}}</td>
              <td scope="row">{{prod.slug}}</td>
              <td scope="row">{{prod.getCreatedAt()| date('d/m/Y')}}</td>
              <td scope="row"><a class="editButton" href="{{ path('edit_product', {'id': prod.id }) }}"><i class="fa-solid fa-pen-to-square"></i> Éditer</a></td>

            </tr>
        {% endfor %}
        </tbody>
    </table><br>

{% endblock %}
